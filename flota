def borrar_movil():
    pass

def compare(numero):
    archivo = open('mi_flota.csv')
    lista = list(csv.DictReader(archivo))
    archivo.close()

    for i in lista:
        movil = i.get('movil')
        if movil == numero:
            repet = TRUE
            break
        else:
            repet = FALSE
            
    return repet

if __name__ == '__main__':

    menu = '''\n
    Seleccione una opcion:
    1. Ingresar nuevo movil
    2. Ingresar datos de movil
    3. Mostar y editar datos de movil
    4. Borrar movil
    La palabra FIN finaliza la ejecucion del programa. 
    Opcion elegida: '''

    while True:
        opcion = input(menu)
        print(f'\nElegiste la opción: {opcion}\n') 

        if opcion == '1':
             ingresar_movil()

        elif opcion == '2':
            
            print('¡Aún no implementado!')
            
        if opcion == '3':
            
            print('¡Aún no implementado!')

        elif opcion == '4':

            print('')

        if opcion == 'FIN':
            print('Ejecucion finalizada')
            break
        